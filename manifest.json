{
  "manifest_version": 2,
  "name": "Rajinikanth Facts",
  "short_name": "Facts about Rajinikanth",
  "description": "Reminds you of some of the facts about Rajinikanth - powered by irkfdb.in.",
  "version": "0.6",
  "icons": {
    "16": "favicon-16x16.png",
    "48": "favicon-48x48.png",
    "128": "favicon-120x120.png"
  },
  "browser_action": {
    "default_popup": "irkfdb.html"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://maxcdn.bootstrapcdn.com; object-src 'self'",
  "permissions": [
    "activeTab",
    "storage"
  ]
}
